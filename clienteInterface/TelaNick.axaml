<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="clienteInterface.TelaNick">

    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderBrush" Value="#4F46E5"/>
        </Style>

    </UserControl.Styles>
  
    <StackPanel Margin="20" Spacing="12" VerticalAlignment="Center">
        <TextBlock Text="Digite seu Nick:" FontSize="18" HorizontalAlignment="Center"/>
        <TextBox x:Name="NickBox" Width="200"/>
        <Button Content="Confirmar" Click="Confirmar_Click"/>
    </StackPanel>
</UserControl>
